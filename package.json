{
  "name": "hypra-support",
  "displayName": "Hypra Support",
  "description": "",
  "version": "0.2.5",
  "engines": {
    "vscode": "^1.96.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "activationEvents": [
    "onLanguage:hypra"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "hypra",
        "aliases": [
          "Hypra",
          "hypra"
        ],
        "extensions": [
          ".hhl"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "hypra",
        "scopeName": "source.hypra",
        "path": "./syntaxes/hypra.tmLanguage.json"
      }
    ],
    "commands": [
      {
        "command": "hypra-support.startVerification",
        "title": "Hypra: Start Verification"
      },
      {
        "command": "hypra-support.startVerificationWithArgs",
        "title": "Hypra: Start Verification with Arguments"
      }
    ],
    "snippets": [
      {
        "language": "hypra",
        "path": "./snippets/hypra-snippets.code-snippets"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.96.0",
    "@typescript-eslint/eslint-plugin": "^8.17.0",
    "@typescript-eslint/parser": "^8.17.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.16.0",
    "ts-loader": "^9.5.1",
    "typescript": "^5.7.2",
    "webpack": "^5.95.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "copy-webpack-plugin": "^12.0.2"
  },
  "publisher": "PaulWinkler",
  "repository": {
    "type": "git",
    "url": "https://github.com/pawinkler/hypra-support"
  }
}
