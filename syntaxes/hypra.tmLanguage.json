{
	"fileTypes": ["hhl"],
	"name": "Hypra Language",
	"patterns": [
        {
            "name": "comment.line.custom",
            "match": "//.*"
        },
        {
            "name": "comment.block.custom",
            "begin": "/\\*",
            "end": "\\*/"
        },
        {
            "name": "keyword.control.custom",
            "match": "\\b(if|else|while|return|method|hyperAssume|hyperAssert|assume|assert|frame|var|havoc|use)\\b"
        },
        {
          "name": "keyword.verification.custom",
          "match": "\\b(assert|assume|ensures|requires|decreases|invariant)\\b"
        },
        {
          "name": "variable.other.constant.",
          "match": "\\b(forall|exists|true|false)\\b"
        },
        {
            "name": "storage.type.custom",
            "match": "\\b(Int|Bool|Set|Seq|Map)\\b"
        },
        {
          "name": "variable.state.custom",
          "match": "<_[a-zA-Z_][a-zA-Z0-9_]*>"
        },
        {
            "name": "entity.name.function",
            "match": "\\+|-|\\*|/"
        },
        {
            "name": "entity.name.function",
            "match": "==|\\!=|<|>|<=|>="
        },
        {
            "name": "entity.name.function",
            "match": "\\+\\+|\\bunion\\b|\\bintersection\\b|\\bsetminus\\b"
        }
    ],
    "repository": {},
	"scopeName": "source.hypra"
  }